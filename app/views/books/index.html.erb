<h1>書籍一覧</h1>

<table>
  <tr>
    <th></th>
    <th>タイトル</th>
    <th>価格</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.title %></td>
      <td><%= book.price %></td>
      <td><%= image_tag("/book_images/#{book.image}") %></td>
      <td><%= link_to '詳細', book_path(book) %></td>
      <td><%= link_to '編集', edit_book_path(book) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to '新規登録', new_book_path %></p>
